{
  "name": "@nacercodes/ui",
  "version": "0.0.1",
  "type": "module",
  "sideEffects": [
    "**/*.css"
  ],
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.mts",
  "exports": {
    "./styles.css": "./dist/index.css",
    ".": {
      "types": "./dist/index.d.mts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev:components": "tsdown --watch",
    "dev:styles": "tailwindcss -i ./src/styles.css -o ./dist/index.css --watch",
    "build": "pnpm run build:components && pnpm run build:styles",
    "build:components": "tsdown",
    "build:styles": "tailwindcss -i ./src/styles.css -o ./dist/index.css",
    "lint": "eslint --max-warnings 0",
    "check-types": "tsc --noEmit",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage"
  },
  "peerDependencies": {
    "react": "^19.2.0",
    "react-dom": "^19.2.0"
  },
  "devDependencies": {
    "@nacercodes/eslint": "workspace:*",
    "@nacercodes/tailwindcss": "workspace:*",
    "@nacercodes/tsconfig": "workspace:*",
    "@tailwindcss/cli": "^4.1.18",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.1.0",
    "@testing-library/user-event": "^14.5.2",
    "@types/react": "^19.2.5",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.2",
    "@vitest/coverage-v8": "^4.0.16",
    "eslint": "^9.39.2",
    "happy-dom": "^20.0.11",
    "jsdom": "^27.4.0",
    "tailwindcss": "^4.1.18",
    "tsdown": "^0.19.0",
    "typescript": "^5.9.3",
    "vite": "^7.3.0",
    "vitest": "^4.0.16"
  },
  "dependencies": {
    "@radix-ui/react-slot": "catalog:radix",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.562.0",
    "tailwind-merge": "^3.4.0",
    "tw-animate-css": "^1.4.0"
  }
}
